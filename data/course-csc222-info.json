  "metadata": {
    "code": "CSC222",
    "title": "Programming and Algorithms II",
    "credits": "4",
    "creditBreakdown": "3 lecture + 1 lab",
    "format": "Hybrid (Online with weekly Zoom sessions)",
    "term": "Spring 2025",
    "prerequisite": "CSC221 (Introduction to Programming - Java) with grade of C or better",
    "meetingInfo": {
      "type": "Weekly Zoom",
      "day": "Wednesdays",
      "time": "6:00 PM - 7:30 PM",
